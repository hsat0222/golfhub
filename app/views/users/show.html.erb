<% if user_signed_in? %>
  <% if @user.id == current_user.id %>
    <h3 class="my-heading">マイプロフィール</h3>
  <% else %>
    <h3 class="heading">プロフィール</h3>
  <% end %>
<% end %>

<!--　プロフィール編集リンク　-->
<div>
  <% if user_signed_in? %>
    <% if @user.id == current_user.id %>
      <%= link_to "プロフィール編集", edit_user_registration_path, class: "btn btn-default" %>
    <% end %>
    <% unless @user.id == current_user.id %>
      <!-- if (current_user.followed_by? @user) && (@user.followed_by? current_user)  %> -->
        <% if @isRoom == true %>
          <p class="user-show-room"><a href="/rooms/<%= @roomId %>" class="btn btn-primary btn-lg">メッセージを送る</a>
        <% else %>
          <%= form_for @room do |f| %>
            <%= fields_for @entry do |e| %>
              <%= e.hidden_field :user_id, value: @user.id %>
            <% end %>
            <%= f.submit "メッセージを送る", class:"btn btn-primary btn-lg user-show-chat"%>
          <% end %>
        <% end %>
       <!-- end %> -->
    <% end %>
  <% end %>
</div>

<!-- プロフィール -->
<div class="col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1 pf-area">

  <div class="pf-image col-sm-4  col-xs-4">
    <%= attachment_image_tag @user, :user_image, :fill, 150, 150, format: 'jpeg', fallback: "no_image.jpg", size:'150x150' %>
  </div>
  <div class="col-sm-8 col-xs-8">
    <table class="table round-info">
      <tr>
        <td>
          <th>
            ニックネーム：
          </th>
        </td>
        <td>
          <%= @user.user_name %>
        </td>
      </tr>
      <% if user_signed_in? %>
        <% if @user.id == current_user.id %>
          <tr>
            <td>
              <th>
                メールアドレス：<br />
                （自分のみ表示）
              </th>
            </td>
            <td>
              <%= @user.email %>
            </td>
          </tr>
        <% end %>
      <% end %>
      <tr>
        <td>
          <th>
            年齢：
          </th>
        </td>
        <td>
          <%= @user.age %>
        </td>
      </tr>
      <%if @user.user_sex == 0 %>
        <tr>
          <td>
            <th>
              性別：
            </th>
          </td>
          <td>
            男性
          </td>
        </tr>
      <% else %>
        <tr>
          <td>
            <th>
              性別：
            </th>
          </td>
          <td>
            女性
          </td>
        </tr>
      <% end %>
      <tr>
        <td>
          <th>
            お住まい：
          </th>
        </td>
        <td>
          <%= @user.prefecture.pref_name %>
        </td>
      </tr>
      <tr>
        <td>
          <th>
            ゴルフ歴：
         </th>
        </td>
        <td>
          <%= @user.exp_golf %>
        </td>
      </tr>
      <tr>
        <td>
          <th>
            平均スコア：
          </th>
        </td>
        <td>
          <%= @user.av_score %>
        </td>
      </tr>
      <tr>
        <td>
          <th>
            ご職業：
          </th>
        </td>
        <td>
          <%= @user.user_job %>
        </td>
      </tr>
    </table>
      <div class="user-intro">紹介コメント</div>
    <span>
      <%= simple_format(@user.user_intro) %>
    </span>
  </div>
</div>