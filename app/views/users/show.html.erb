<h3 class="heading">プロフィール</h3>

<!-- プロフィール -->
<div class="col-sm-10 col-sm-offset-1 pf-area">
  <div>
    <% if @user.id == current_user.id %>
    <%= link_to "プロフィール編集", edit_user_registration_path, class:"btn" %>
    <% else %>
    <%= link_to "メッセージを送る", user_messages_path(@user.id), class:"btn" %>
    <% end %>

  </div>
  <div class="pf-image col-sm-4  col-xs-4">
    <%= attachment_image_tag @user, :user_image, :fill, 150, 150, format: 'jpeg', fallback: "no_image.jpg", size:'150x150' %>
  </div>
  <div class="col-sm-8 col-xs-8">
    <div class="pf-intro">
      <%= "ニックネーム：　" + @user.user_name %>
    </div>
    <% if @user.id == current_user.id %>
    <div>
      <%= "メールアドレス：" + @user.email %>
    </div>
    <% end %>
    <div>
      <%= "年齢：　　　　　" + @user.age %>
    </div>
    <div>
      <%= "お住まい：　　　" + @user.prefecture.pref_name %>
    </div>
    <div>
      <%= "ゴルフ歴：　　　" + @user.exp_golf %>
    </div>
    <div>
      <%= "平均スコア：　　" + @user.av_score %>
    </div>
    <div>
      <%= "ご職業：　　　　" + @user.user_job %>
    </div>
      <div class="user-intro">自己紹介</div>
    <span>
      <%= @user.user_intro %>
    </span>
  </div>
</div>